    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build/Debug (Win x86)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\bin\\windows\\x86\\${workspaceFolderBasename}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Win x86"
        },
        {
